{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@infra/*": ["src/infra/*"],
      "@modules/*": ["src/modules/*"]
    }
  }
}
